<div class="container">
  <div class="span5 content" style="margin-left:-100px">
    <h1 style="margin-left:35px; margin-bottom:20px">osCollect Sharing</h1>
    <div class="row">
      <div class="login-form">
        <div class="login_flash flashes">
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :class=>"flash flash_#{name}" %>
          <% end %>
          <br />
        </div>
        <%= form_tag sessions_path, :class => "user_new" do %>
          <fieldset>
            <div class="clearfix">
              <input id="username" name="username" type="text" placeholder="Username" />
            </div>
            <div class="clearfix" style="margin-top:10px">
              <input id="password" name="password" type="password" placeholder="Password">
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Login</button>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <%= link_to "Forgot your password?", new_password_reset_path %>
          </fieldset>
        <% end %>
      </div>
    </div>
    <div class="login_footer" style="margin-left:35px">
	    2013 osCollect Sharing
			<br />
	    <small><%= "#{Time.now.utc.strftime("%A, %b %-d, %Y %H:%M:%S %Z")}" %></small>
    </div>
  </div>
</div>