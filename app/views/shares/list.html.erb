<h2>Shares</h2>
<% if @shares.blank? %>
	<h3>No Shares found.</h3>
<% else %>
  <span style="float:right">
    <%= page_entries_info @shares %>
  </span>
  <br />
  <table class="table table-striped">
    <tbody>
      <% @shares.each do |share| %>
        <tr>
          <td>
						<%= share.name %>
						<%= share.description %>
					</td>
          <td><%= share.share_type %></td>
          <td><%= share.email %></td>
          <td><%= share.share_origin %></td>
          <td><%= share.share_token %></td>
					<%# cls: deleting causes issues for each osCollect instance's shares table, so don't allow: %>
          <td><%#= link_to 'delete', share, confirm: "\n\nAre you sure?\n\n", method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @shares, inner_window: 2, style: 'font-size:small' %>
<% end %>
